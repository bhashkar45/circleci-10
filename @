version: 2
jobs:
  build:
    docker:
    - image: circleci/ruby:2.4
    steps:
    - checkout
    - run: bundle install
  test:
    docker:
      - image: circleci/ruby:2.4
    steps:
      - checkout
      - run: bundle install
   test1:
    docker:
      - image: circleci/ruby:2.4
    steps:
      - checkout
      - run: bundle install

