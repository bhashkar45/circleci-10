workflows:
  version: 2
  build-test-and-approval-deploy:
    jobs:
      - build 
      - test:
          requires:
            - build
      - test1: 
          requires: 
            - test
      - hold: 
          type: approval 
          requires: 
           - test1
      - deploy:
          requires:
            - hold
